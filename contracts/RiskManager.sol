    function borrowAllowed(address market, address borrower, uint borrowAmount) external returns (uint) {
        // Pausing is a very serious situation - we revert to sound the alarms
        require(!borrowGuardianPaused, "borrow is paused");

        if (!markets[market].isListed) {
            return uint(Error.MARKET_NOT_LISTED);
        }

        // *may include Policy Hook-type checks

        if (!markets[market].accountMembership[borrower]) {
            // only markets may call borrowAllowed if borrower not in market
            require(msg.sender == market, "sender must be market");

            // attempt to add borrower to the market
            Error err = addToMarketInternal(Market(msg.sender), borrower);
            if (err != Error.NO_ERROR) {
                return uint(err);
            }

            // it should be impossible to break the important invariant
            assert(markets[market].accountMembership[borrower]);
        }

        if (oracle.getUnderlyingPrice(Market(market)) == 0) {
            return uint(Error.PRICE_ERROR);
        }

        (Error err, , uint shortfall) = getHypotheticalAccountLiquidityInternal(borrower, Market(market), 0, borrowAmount);
        if (err != Error.NO_ERROR) {
            return uint(err);
        }
        if (shortfall > 0) {
            return uint(Error.INSUFFICIENT_LIQUIDITY);
        }

        return uint(Error.NO_ERROR);
    }

